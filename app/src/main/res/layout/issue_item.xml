<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ItemContainerStyle"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/user_avatar_iv"
        style="@style/AvatarImageStyle"
        android:contentDescription="@string/author_avatar_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/issue_title"
        style="@style/ItemDescriptionStyle"
        app:layout_constraintStart_toEndOf="@id/user_avatar_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondary_text_tv"
        style="@style/ItemDescriptionStyle"
        app:layout_constraintStart_toEndOf="@id/user_avatar_iv"
        app:layout_constraintTop_toBottomOf="@id/issue_title" />

</androidx.constraintlayout.widget.ConstraintLayout>



