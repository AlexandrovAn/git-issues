<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="IssueItemBinding">

        <variable
            name="Issue"
            type="com.petproject.gitissues.model.Issue" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/user_avatar_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:profileImage="@{Issue.user.avatarUrl}"
            android:contentDescription="@string/author_avatar_description" />

        <TextView
            android:id="@+id/issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="@{Issue.title}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_avatar_iv" />

        <TextView
            android:id="@+id/secondary_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="@{String.format(@string/issue_number_author,String.valueOf(Issue.number),String.valueOf(Issue.user.login))}"
            app:layout_constraintTop_toBottomOf="@id/issue_title"
            app:layout_constraintStart_toEndOf="@id/user_avatar_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
